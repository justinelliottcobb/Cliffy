{
  "name": "@cliffy/typescript",
  "version": "0.1.0",
  "description": "TypeScript API for the Cliffy geometric algebra framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && npm run build:wasm",
    "build:wasm": "wasm-pack build ../cliffy-wasm --target web --out-dir ../cliffy-typescript/src/wasm",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^24.3.1",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "vitest": "^1.0.0",
    "vite": "^7.1.5"
  },
  "keywords": [
    "geometric-algebra",
    "clifford-algebra",
    "typescript",
    "react",
    "webassembly"
  ],
  "author": "Cliffy Team",
  "license": "MIT"
}