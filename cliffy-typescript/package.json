{
  "name": "@cliffy/core",
  "version": "0.1.0",
  "description": "Cliffy reactive framework with geometric algebra",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build ../cliffy-wasm --target web --out-dir ../cliffy-typescript/pkg",
    "build:ts": "tsc",
    "build": "npm run build:wasm && npm run build:ts",
    "clean": "rm -rf dist pkg",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "reactive",
    "frp",
    "geometric-algebra",
    "wasm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
